{
	"$id": "journey_rq.json",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Add a group for journey",
	"description": "Schema definition to add a group for a journey",
	"type": "object",
	"examples": [
		{
			"id": 1,
			"people": 4
		}
	],
	"properties": {
		"id": {
			"type": "string",
			"description": "group id",
			"minimum": 1
		},
		"people": {
			"type": "integer",
			"description": "group size. Allowed from 1 to 6",
			"enum": [
				1,
				2,
				3,
				4,
				5,
				6
			]
		}
	},
	"required": [
		"id",
		"people"
	]
}